extends layout

block content
  link(href="//netdna.bootstrapcdn.com/font-awesome/4.0.3/css/font-awesome.css", rel="stylesheet")
  link(href="/fatt/stylesheets/signin.css", rel="stylesheet")
  .container
      .omb_login
        h3.omb_authTitle
          | Login or
          a(href='#' disabled)
            |&nbsp;Sign up
        .row.omb_row-sm-offset-3.omb_socialButtons
          .col-xs-4.col-sm-2
            a.btn.btn-lg.btn-block.omb_btn-facebook(href='#' disabled)
              i.fa.fa-facebook.visible-xs
              span.hidden-xs Facebook
          .col-xs-4.col-sm-2
            a.btn.btn-lg.btn-block.omb_btn-twitter(href='#' disabled)
              i.fa.fa-twitter.visible-xs
              span.hidden-xs Twitter
          .col-xs-4.col-sm-2
            a.btn.btn-lg.btn-block.omb_btn-google(href='/fatt/googleauth')
              i.fa.fa-google-plus.visible-xs
              span.hidden-xs Google+
        .row.omb_row-sm-offset-3.omb_loginOr
          .col-xs-12.col-sm-6
            hr.omb_hrOr
            span.omb_spanOr or
        .row.omb_row-sm-offset-3
          .col-xs-12.col-sm-6
            form.omb_loginForm(action='', autocomplete='off', method='POST')
              .input-group
                span.input-group-addon
                  i.fa.fa-user
                input.form-control(type='text', name='username', placeholder='email address' disabled)
              span.help-block
              .input-group
                span.input-group-addon
                  i.fa.fa-lock
                input.form-control(type='password', name='password', placeholder='Password' disabled)
              button.btn.btn-lg.btn-primary.btn-block(type='submit' disabled) Login
        .row.omb_row-sm-offset-3
          .col-xs-12.col-sm-3
            label.checkbox
              input(type='checkbox', value='remember-me' disabled)
              | Remember Me
          .col-xs-12.col-sm-3
            p.omb_forgotPwd
              a(href='#' disabled) Forgot password?
